<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>HEADER</param-name>
        <param-value>Portfolio</param-value>
    </context-param>
    
    <context-param>
        <param-name>FOOTER</param-name>
        <param-value>Â© ALLH WEB PORTFOLIO</param-value>
    </context-param>
    
    <context-param>
        <param-name>username</param-name>
        <param-value>admin</param-value>
    </context-param>
    
    <context-param>
        <param-name>password</param-name>
        <param-value>1233456</param-value>
    </context-param>
    
    <servlet>
        <servlet-name>HobbyServlet</servlet-name>
        <servlet-class>HobbyServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
        <init-param>
            <param-name>username</param-name>
            <param-value>admin</param-value>
        </init-param>
        <init-param>
            <param-name>password</param-name>
            <param-value>123456</param-value>
        </init-param>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HobbyServlet</servlet-name>
        <url-pattern>/HobbyServlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
   
    <error-page>
        <exception-type>com.login.AuthenticationException</exception-type>
        <location>/error/Authentication.jsp</location>
    </error-page>
   
   <error-page>
        <exception-type>com.login.NullValueException</exception-type>
        <location>/error/Null.jsp</location>
    </error-page>
   
    <listener>
        <listener-class>UserContextListener</listener-class>
    </listener>
</web-app>
